<%- layout("layouts/boilerplate") %>

<div class="row mt-5">
  <h1 class="col-12 text-center mb-4">Login to Wanderlust</h1>

  <div class="col-6 offset-3">
    <form action="/login" method="POST">

      <!-- Username -->
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-primary w-100">Login</button>
    </form>
  </div>
</div>
